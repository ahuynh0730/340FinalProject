<h3> Customers Table </h3>

<table id="customerTable">
	<tr>
		<th> ID </th>
		<th> First Name </th>
		<th> Last Name </th>
		<th> Address </th>
		<th> City </th>
		<th> State </th>
		<th> Zip Code </th>
	</tr>
	
	

	{{#if results}}
		{{#each results}}
			<tr>
				<td> {{this.id}} </td>
				<td> {{this.fname}} </td>
				<td> {{this.lname}} </td>
				<td> {{this.address}} </td>
				<td> {{this.city}} </td>
				<td> {{this.state}} </td>
				<td> {{this.zipcode}} </td>
				<td><a href="/updateTable?id={{this.id}}"><input type="button" value="Update"></a></td>
                <td>
                    <input type="button" name="delete" value="Delete" onClick="deleteData('dataTable',{{this.id}})">
                    <input type="hidden" id="delete{{this.id}}">
                </td>
			</tr>
		{{/each}}
    {{/if}}
	
</table>





